{
  "name": "@plan-together/database",
  "version": "1.0.0",
  "private": true,
  "description": "Database migrations and utilities",
  "main": "src/index.js",
  "scripts": {
    "migrate": "node-pg-migrate up --config-file migrations-config.js",
    "migrate:down": "node-pg-migrate down --config-file migrations-config.js",
    "migrate:create": "node-pg-migrate create --config-file migrations-config.js"
  },
  "dependencies": {
    "pg": "^8.11.3",
    "node-pg-migrate": "^6.2.2"
  },
  "devDependencies": {
    "dotenv": "^16.3.1"
  }
}